<!DOCTYPE html>
<html lang="en">
    <%- include('../index/head.ejs') %>
<body>
    <div id='container'>
        <%- include('../nav.ejs') %>    
        <%- include('../title.ejs') %>
        <section id='add'>
            <li>
                <% for(let i=0; i<list.length; i++){ %>
                    <ul>
                        <form action="/update-process" method='post'>
                            <%=list[i].ACCOUNT%> : <%=list[i].balance%>
                            <input type="hidden" name="id" value="<%=list[i].ACCOUNT%>">
                            <input type="text" name='money' placeholder='1000'>
                            <input type="submit">
                        </form>
                    </ul>
                <% } %>
            </li>
        </section>
    </div>
</body>
</html>