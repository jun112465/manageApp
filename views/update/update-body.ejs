<div id='container'>
    <%- include('../nav.ejs') %>
    <!-- <h1><a href="/">HOME</a></h1> -->
    <%- include('../title.ejs') %>

    <section id='add'>
        <li>
            <% for(let i=0; i<list.length; i++){ %>
                <form action="/update-process" method='post'>
                    <ul><%=list[i].ACCOUNT%> : <%=list[i].balance%></ul>
                    <input type="hidden" name="id" value="<%=list[i].ACCOUNT%>" >
                    <input type="text" name='money' placeholder='1000'>
                    <input type="submit">
                </form>
            <% } %>
        </li>
    </section>

    <form action="/add_date" method='post'>
        <input type="submit" value="add DATE">
    </form>
    <section id='box'>
        <% for(let i=0; i<records.length; i++) {%>
            <div class='box' id=<%=i %> > 
                <div>
                    <%=records[i].date%>
                </div>
                <div>total : <%=total%>
                </div>
                <form action='/box_update' method='post' id='formBox'>
                    <input type='text' placholder='1000'>
                    <select name='attribute'>
                        <option value='necessary' selected>생필품</option>
                        <option value='pleasure'>유흥</option>
                        <option value='shopping'>쇼핑</option>
                    </select>
                    <input type='submit' value='전송'>
                </form>
            </div>
        <%}%>

    </section> 
</div> 
