<div id='container'>
    <%- include('../nav.ejs') %>
    <%- include('../title.ejs') %>
    <form action="/add_date" method='post'>
        <input type="submit" value="add DATE">
    </form>
    <section>
        <% for(let i=0; i<records.length; i++) {%>
            <div class='box'> 
                <div>
                    <%=records[i].date%>
                </div>
                <div>
                    total : <%=records[i].necessary + records[i].pleasure + records[i].shopping%> 
                </div>
                <form action='/box_update' method='post' class='formBox'>
                    <input type='hidden' name='date' value=<%=records[i].date%>>
                    <input type='text' placholder='1000' name='consumption' autocomplete="off">
                    <select name='attribute'>
                        <option value='necessary' selected>necessary</option>
                        <option value='pleasure'>pleasure</option>
                        <option value='shopping'>shopping</option>
                    </select>
                    <select name="account">
                        <% for(let i=0; i<list.length; i++) { %>
                            <option value=<%=list[i].ACCOUNT%>><%=list[i].ACCOUNT%></option>
                        <%}%>
                    </select>
                    <input type='submit' value='전송'>
                </form>
            </div>
        <%}%>

    </section> 
</div> 
